<ion-view title='<img class="title-image" src="img/exTracker.png" />'>
  <ion-nav-bar>
  <ion-nav-buttons side="center">
      <button class="right button button-icon icon ion-plus" ng-click="insert()">Click</button>
  </ion-nav-buttons>
  <ion-nav-buttons side="right">
    <button menu-toggle="left" class="button button-icon icon ion-navicon" ng-click="toggleLeft()"></button>
 </ion-nav-buttons>
</ion-nav-bar>
    <ion-content>
      <ion-refresher
           pulling-text="Pull to refresh..."
           on-refresh="doRefresh()">
        </ion-refresher>
      <!-- <table> -->
    <!--  http://codepen.io/anon/pen/VKdBJd-->
          <div ng-if="lists.length>0" class="row header">
           <div class="col">Item Name</div>
            <div  class="col">Price</div>
            <div  class="col">Unit</div>
            <div  class="col">Date</div>
            <div  class="col"><span style="color:red">Spent:</span></div>
            <div class="col"><span style="color:red">{{spent}}</span></div>
            <div class="col"></div>
            <div class="col"></div>
          </div>

          <div ng-if="lists.length>0" class="row" ng-repeat="list in lists">
            <div class="col" style="width:22% !important;">{{list.category_item_name}}</div>
            <div class="col">{{list.category_item_price}}</div>
            <div class="col">{{list.category_item_unit}}</div>
            <div class="col">{{list.category_item_date}}</div>
           <div class="col"><a href="#/itemHistory/{{list.category_item_name}}">History</a></div>
           <div class="col"><a ng-click="editRecord('{{list.category_item_name}}',{{list.category_item_price}},{{list.category_item_unit}},'{{list.category_item_date}}',{{list.category_item_id}})">Edit</a></div>
           <div class="col"><a ng-click="deleteRecord({{list.category_item_id}})">Delete</a></div>
         </div>
         <div>                
                <span ng-show="noRecords" style="margin-left:45px;color:blue !important;font-size:20px !important;">You haven't added any item to the category yet. Let's start by clicking "Add" on top</span>            
        </div>
    </ion-content>
</ion-view>


